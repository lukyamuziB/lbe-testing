<?xml version="1.0"?>
<ruleset name="Lenken-Server PHPMD rule set"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Lenken-Server PHPMD rule set contains a collection of rules about 
        unused code, code size, names, and so forth.
    </description>

    <!-- Import the entire unused code rule set -->
    <rule ref="rulesets/unusedcode.xml" />

    <!-- Import the entire code size rule set -->
    <rule ref="rulesets/codesize.xml" />

    <!-- Import ConstantNamingConventions from the naming rule set -->
    <rule ref="rulesets/naming.xml/ConstantNamingConventions" />

    <!-- Import BooleanGetMethodName from the naming rule set -->
    <rule ref="rulesets/naming.xml/BooleanGetMethodName" />

    <!-- Import CamelCaseClassName from the controversial rule set -->
    <rule ref="rulesets/controversial.xml/CamelCaseClassName" />

    <!-- Import CamelCaseMethodName from the controversial rule set -->
    <rule ref="rulesets/controversial.xml/CamelCaseMethodName" />

</ruleset>
